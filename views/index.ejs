<div ng-app="BlogApp">
    <nav ng-controller="MainNavCtrl" class="navbar navbar-default">
    <div class="container-fluid">
      <!-- Brand and toggle get grouped for better mobile display -->
      <div class="navbar-header">
        <button ng-click="navCollapsed=!navCollapsed" type="button" class="navbar-toggle collapsed" data-toggle="collapse" data-target="#bs-example-navbar-collapse-1">
          <span class="sr-only">Toggle navigation</span>
          <span class="icon-bar"></span>
          <span class="icon-bar"></span>
          <span class="icon-bar"></span>
        </button>
        <a class="navbar-brand" href="/">Bloggy {{1+0}}.0</a>
      </div>

      <!-- Collect the nav links, forms, and other content for toggling -->
      <div collapse="navCollapsed" class="collapse navbar-collapse" id="bs-example-navbar-collapse-1">
        <ul class="nav navbar-nav">
          <li ng-class="{active:isActive('/about')}"><a href="/about">About</a></li>
          <li ng-class="{active:isActive('/faq')}"><a href="/faq">FAQ</a></li>
          <li dropdown class="dropdown">
            <a href="#" dropdown-toggle class="dropdown-toggle" data-toggle="dropdown" role="button" aria-expanded="false">{{currentUser.firstName || 'User'}} <span class="caret"></span></a>
            <ul class="dropdown-menu" role="menu">
              <li><a href="/about">About</a></li>
              <li><a href="/faq">FAQ</a></li>
              <li class="divider"></li>
              <li><a href="" ng-click="logout()">Logout</a></li>

            </ul>
          </li>
        </ul>
        <ul class="nav navbar-nav navbar-right">
          <li><a ng-hide="currentUser" ng-click="showLogin()">Login</a></li>
          <li><a href="" ng-show="currentUser" ng-click="logout()">Logout</a></li>
          <li><a ng-hide="currentUser" ng-click="showSignup()">Signup</a></li>

        <form ng-submit="search()" class="navbar-form navbar-left" role="search">
          <div class="form-group">
            <input ng-model="searchTerm" type="text" class="form-control" placeholder="Search Posts">
          </div>
          <button type="submit" class="btn btn-default">Submit</button>
        </form>
        </ul>
      </div><!-- /.navbar-collapse -->
    </div><!-- /.container-fluid -->
  </nav>

  <div class="container" ng-app="BlogApp">
    <ng-view></ng-view>
  </div>
</div>
